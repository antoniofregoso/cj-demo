{
    "name": "cj-app",
    "version": "1.0.0",
    "description": "",
    "main": "public/index.js",
    "module": "src/index.js",
    "scripts":{
        "scss": "sass --load-path=node_modules src/app/scss/assets.scss public/assets.css",
        "config": "mkdir -p src/.env && echo '{\"google\":{\"gtag\":\"G-XXXXXXXXXX\"}}' > src/.env/conf.json",
        "esbuild:base": "esbuild src/index.js --bundle --outfile=public/index.js --banner:js='/*! Page generated with CustomerJourney.js */'",
        
        "serve": "npm run esbuild:base -- --servedir=public",
        "init": "npm-run-all config scss serve",
        "build": "npm run esbuild:base",
        "build:prod": "npm run esbuild:base -- --minify",
        "dev": "npm run esbuild:base -- --watch --serve-fallback=public/index.html --servedir=public"

    },
    "author": "Antonio Fregoso",
    "license": "GPL-3.0-or-later",
    "devDependencies": {
        "esbuild": "^0.25.5",
        "npm-run-all": "^4.1.5",
        "sass": "^1.71.1"
    },
    "dependencies": {
        "@customerjourney/cj-components": "^0.10.1",
        "@customerjourney/cj-core": "^1.6.0",
        "@customerjourney/cj-router": "^1.2.1",
        "@reduxjs/toolkit": "^2.2.7",
        "redux-persist": "^6.0.0",
        "animate.css": "^4.1.1",
        "bulma": "^1.0.2"
    }
}
