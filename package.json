{
    "name": "cj-app",
    "version": "1.0.0",
    "description": "",
    "main": "public/index.js",
    "module": "src/index.js",
    "scripts": {
        "scss": "sass --load-path=node_modules src/app/scss/assets.scss public/assets.css",
        "config": "mkdir -p src/.env && echo '{\"google\":{\"gtag\":\"G-XXXXXXXXXX\"}}' > src/.env/conf.json",
        "build": "esbuild src/index.js --bundle  --outfile=public/index.js --banner:js='/*! Page generated with CustomerJourney.js */'",
        "prod": "esbuild src/index.js --bundle --minify  --outfile=public/index.js --banner:js='/*! Page generated with CustomerJourney.js */'",
        "deploy": "npm-run-all config scss prod",
        "serve": "esbuild src/index.js --bundle  --outfile=public/index.js--banner:js='/*! Page generated with CustomerJourney.js */' --servedir=public",
        "watching": "esbuild src/index.js --bundle  --outfile=public/index.js --banner:js='/*! Page generated with CustomerJourney.js */' --watch --serve-fallback=public/index.html --servedir=public",
        "init": "npm-run-all config scss build serve",
        "watch": "npm-run-all build watching",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "Antonio Fregoso",
    "license": "GPL-3.0-or-later",
    "devDependencies": {
        "esbuild": "^0.25.5",
        "npm-run-all": "^4.1.5",
        "sass": "^1.71.1"
    },
    "dependencies": {
        "@customerjourney/cj-components": "^0.10.1",
        "@customerjourney/cj-core": "^1.6.0",
        "@customerjourney/cj-router": "^1.2.1",
        "@fortawesome/fontawesome-svg-core": "^6.5.1",
        "@fortawesome/free-brands-svg-icons": "^6.5.1",
        "@fortawesome/free-regular-svg-icons": "^6.7.2",
        "@fortawesome/free-solid-svg-icons": "^6.5.1",
        "@reduxjs/toolkit": "^2.2.7",
        "animate.css": "^4.1.1",
        "bulma": "^1.0.2",
        "libphonenumber-js": "^1.12.9",
        "redux-persist": "^6.0.0",
        "remarkable": "^2.0.1",
        "swiper": "^11.2.10",
        "vanilla-calendar-pro": "^3.0.4"
    }
}
